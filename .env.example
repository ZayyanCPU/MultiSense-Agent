# ============================================
# MultiSense Agent - Environment Variables
# ============================================
# Copy this file to .env and fill in your values

# --- HuggingFace Configuration (FREE!) ---
# Get your free token at: https://huggingface.co/settings/tokens
HF_API_TOKEN=hf_your-huggingface-token-here
HF_CHAT_MODEL=mistralai/Mistral-7B-Instruct-v0.3
HF_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
HF_WHISPER_MODEL=openai/whisper-large-v3
HF_VISION_MODEL=Salesforce/blip-image-captioning-large

# --- WhatsApp Cloud API Configuration ---
WHATSAPP_API_TOKEN=your-whatsapp-api-token-here
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id-here
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id-here
WHATSAPP_VERIFY_TOKEN=your-custom-verify-token-here
WHATSAPP_API_VERSION=v21.0

# --- n8n Configuration ---
N8N_WEBHOOK_URL=http://n8n:5678
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=changeme
N8N_ENCRYPTION_KEY=your-encryption-key-here

# --- ChromaDB Configuration ---
CHROMA_HOST=chromadb
CHROMA_PORT=8000
CHROMA_COLLECTION_NAME=multisense_documents

# --- FastAPI Backend Configuration ---
APP_HOST=0.0.0.0
APP_PORT=8080
APP_DEBUG=false
APP_LOG_LEVEL=info

# --- RAG Configuration ---
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_TOP_K=5

# --- Conversation Memory ---
MAX_CONVERSATION_HISTORY=20
CONVERSATION_TTL_HOURS=24
